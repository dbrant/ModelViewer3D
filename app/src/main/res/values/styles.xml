<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.Dark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>

        <item name="colorControlNormal">@color/colorToolbarContents</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>
    </style>

    <style name="AppTheme.NoTitle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/colorToolbarContents</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorToolbarContents</item>
        <item name="titleTextAppearance">@style/ToolbarTitleAppearance</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="overlapAnchor">true</item>
    </style>

</resources>
